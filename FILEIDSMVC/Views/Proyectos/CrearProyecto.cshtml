@model FILEIDSMVC.Models.CrearProyectoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>


@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("CrearProyecto", "Proyectos", FormMethod.Post, new { @class = "container", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NombreProyecto, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NombreProyecto, new { htmlAttributes = new { @class = "form-control mt-2" } })
                    @Html.ValidationMessageFor(model => model.NombreProyecto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DescriptorProyecto, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DescriptorProyecto, new { htmlAttributes = new { @class = "form-control mt-2" } })
                    @Html.ValidationMessageFor(model => model.DescriptorProyecto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear proyecto" class="btn btn-success mt-3" />
                </div>
            </div>
        </div>

        <div>

            @Html.ActionLink("Volver", "Proyectos")
        </div>
    }

}
else
{
    Context.Response.Redirect("/Account/Login");
}



